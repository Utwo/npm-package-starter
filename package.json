{
  "name": "@utwo/npm-package-starter",
  "version": "0.0.1",
  "description": "Npm package starter boilerplate",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "tsc -w",
    "build": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "lint": "tslint -p ./",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "npm run test -- --coverage --no-cache",
    "upload:coverage": "codecov",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/teleporthq/teleport-generator-react.git"
  },
  "author": "teleportHQ",
  "license": "MIT",
  "homepage": "https://github.com/teleporthq/teleport-generator-react#README",
  "devDependencies": {
    "@types/jest": "^24.0.6",
    "@types/node": "^11.9.4",
    "codecov": "^3.8.3",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "pretty-quick": "^1.10.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint"
    }
  }
}
